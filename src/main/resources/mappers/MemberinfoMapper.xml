<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.MemberinfoMapper">
<!--    <insert loginId="insertOne" parameterType="java.util.Map"> 으로 넘기기도 함 or 객체-->
    <insert id="insertOne" parameterType="com.example.app.vo.Member">
        insert into memberinfo(id, pw, email, agree, name, nickname, age, interest)
            values(#{id},#{pw},#{email},#{agree},#{name},#{nickname},#{age},#{interest})
    </insert>
    <select id="selectById" parameterType="java.lang.String" resultType="com.example.app.vo.Member">
        select * from memberinfo where id=#{id}
    </select>
    <select id="selectByNickname" parameterType="java.lang.String" resultType="com.example.app.vo.Member">
        select * from memberinfo where id=#{nickname}
    </select>

    <select id="selectAllMemberInfo" resultType="java.util.ArrayList">
        select * from memberinfo
    </select>


</mapper>